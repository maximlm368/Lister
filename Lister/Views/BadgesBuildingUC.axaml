<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="40"
             x:Class="Lister.Views.BadgesBuildingUserControl"
			 xmlns:vm="clr-namespace:Lister.ViewModels;assembly=Lister"
			 x:DataType="vm:BadgesBuildingViewModel">

	
	<Grid
		Name="badgeTemplateChoice"
		Height="40"
		ZIndex="1"
	    Margin="0,0"
		Background="LightGray">
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition ></ColumnDefinition>
			<ColumnDefinition  Width="240"></ColumnDefinition>
			<ColumnDefinition ></ColumnDefinition>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition  Height="20" ></RowDefinition>
			<RowDefinition Height="20" ></RowDefinition>
		</Grid.RowDefinitions>

		<Button
			Name="buildBadges"
			Classes="mainButton"
			Grid.Column="1"
			Grid.Row="0"
			Grid.RowSpan="2"
			Width="200"
			Height="32"
			BorderThickness="1"
			BorderBrush="BlueViolet"
			Margin="20,-2"
			ZIndex="2"
			IsEnabled="{Binding  Path=BuildingIsPossible,  Mode=OneWay}"
			ToolTip.Tip="Построить макет на основе выбранных данных"
			Command="{Binding  BuildBadges}">

			<StackPanel Orientation="Horizontal">
				<Label
					FontFamily="{StaticResource FA}"
					Content="&#xE2CA;"
					Width="30"
					Height="32"
					FontSize="16"
					Padding="3,8"/>
				<Label
					Content="Построить макет"
					Height="32"
					Width="170"
					FontSize="16"
					Padding="8,6"/>
			</StackPanel>
			
		</Button>

		<Border
			Grid.Column="0"
			Grid.Row="1"
			Height="20"
			CornerRadius="0,5,0,0"
			Background="White"/>

		<Border
			Grid.Column="2"
			Grid.Row="1"
			Height="20"
			CornerRadius="5,0,0,0"
			Background="White"/>

		<Border
			Grid.Column="1"
			Grid.Row="1"
			Height="20"
			CornerRadius="0,0,0,0"
			Background="White"/>

		<Border
			Grid.Column="1"
			Grid.Row="1"
			Height="20"
			CornerRadius="0,0,5,5"
			Background="LightGray"/>

	</Grid>
  
</UserControl>




