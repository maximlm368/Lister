<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:uc="clr-namespace:Lister.Views"
			 xmlns:vm="clr-namespace:Lister.ViewModels;assembly=Lister"
             mc:Ignorable="d" d:DesignWidth="830" d:DesignHeight="460"
             x:Class="Lister.Views.ModernMainView"
			 x:DataType="vm:ModernMainViewModel"
			 Height="460"
			 Width="830" >
		
	<StackPanel ZIndex="1" >

		<uc:PersonSourceUserControl
			Name="personSource"/>

		<uc:PersonChoosingUserControl
			Name="personChoosing"
			ZIndex="3"
			Margin="0,-155"
			Height="350"/>

		<uc:BadgesBuildingUserControl
			Name="badgeBuilding"
			Margin="0,-4"/>

		<uc:SceneUserControl
			Name="scene"
			Margin="0,4"/>

		<uc:PageNavigationZoomer
			Name="navigatorZoomer"
			Background="LightGray"
			Margin="0,-4"/>

		<uc:WaitingView
			Name="waiting"
			ZIndex = "5"/>

	</StackPanel>
		
</UserControl>


