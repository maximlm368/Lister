<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="650"
			 xmlns:vm="clr-namespace:Lister.ViewModels"
             x:Class="Lister.Views.BadgeEditorView"
			 x:DataType="vm:BadgeEditorViewModel">
  
	<StackPanel>

		<Grid Name="activationAndAcception"  Height="40" Margin="10,0"  Background="AntiqueWhite">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="132" ></ColumnDefinition>
				<ColumnDefinition Width="132" ></ColumnDefinition>
				<ColumnDefinition ></ColumnDefinition>
			</Grid.ColumnDefinitions>

			
			<Button Name="chooseFile"  Content="Редактировать" Width="130"  Grid.Column="0"	HorizontalContentAlignment="Center" />
			
			<Button  Name="editSourceFile" Width="130" HorizontalContentAlignment="Center"
					 Content="Принять"  Grid.Column="1" />
		</Grid>

		
		
		<Grid Name="zoomAndNavigation"  Height="40" Margin="10,-2" Background="AliceBlue"> 
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50"></ColumnDefinition>
				<ColumnDefinition Width="50"></ColumnDefinition>
				<ColumnDefinition Width="64"></ColumnDefinition>
				<ColumnDefinition Width="50"></ColumnDefinition>
				<ColumnDefinition Width="50"></ColumnDefinition>
				<ColumnDefinition Width="30"></ColumnDefinition>
				<ColumnDefinition Width="30"></ColumnDefinition>
				<ColumnDefinition Width="64"></ColumnDefinition>
				<ColumnDefinition Width="30"></ColumnDefinition>
				<ColumnDefinition ></ColumnDefinition>
			</Grid.ColumnDefinitions>
			

			<Button Name="firstBadge"  Content="first" Grid.Column="0"  HorizontalContentAlignment="Center" 
					Width="48" IsEnabled="False" />
			<Button  Name="previousBadge" Content="prev" Grid.Column="1"  HorizontalContentAlignment="Center" 
					 Width="48" IsEnabled="False" />

			<TextBox  Name="visiblePageNumber"  Width="60"  FontSize="14"  Grid.Column="2"  MaxHeight="30" Margin="0,3"
					  Text="{Binding   Path = visiblePageNumber,   Mode=OneWay}"/>

			<Button Name="nextBadge"  Content="next" Grid.Column="3"  HorizontalContentAlignment="Center" 
					Width="48" IsEnabled="False" />
			<Button Name="lastBadge"  Content="last" Grid.Column="4"  HorizontalContentAlignment="Center" 
					Width="48" IsEnabled="False"/>
			<Button  Name="zoomOn" Content="+" Grid.Column="6"  HorizontalAlignment="Center" Width="28" IsEnabled="False" />
			
			<TextBox  Name="scalabilityGrade"  Width="60"  FontSize="14"  Grid.Column="7"  MaxHeight="30" Margin="0,3"
					  IsReadOnly="True" Text="{Binding   Path = zoomDegreeInView,   Mode=OneWay}"/>
			<Button  Name="zoomOut"  Content="-" Grid.Column="8"  HorizontalAlignment="Center" Width="28" IsEnabled="False" />
		</Grid>

		
		<Grid Name="badgeArea" Margin="10,2"  Background="AntiqueWhite">
			<Grid.ColumnDefinitions>
				<ColumnDefinition ></ColumnDefinition>
			</Grid.ColumnDefinitions>

			<Border  BorderThickness="1"  BorderBrush="Gray"  Grid.Column="0" Width="980"  Height="560"  >

				<Canvas  Name="incorrectBadge"  Width="977"  Height="557" Background="Coral">

					<Image Name="backgroundImage" Source = "{Binding   Path = BeingProcessedBadge.ImageBitmap,   Mode=OneWay }" 
						   Width="977" />
					
				</Canvas>
			</Border>
			
		</Grid>
		

		
		
	</StackPanel>
	
</UserControl>
