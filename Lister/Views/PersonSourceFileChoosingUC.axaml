<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
			 xmlns:vm="clr-namespace:Lister.ViewModels"
             x:Class="Lister.Views.PersonSourceFileChoosingUC">

	<Grid Name="source"  Height="40" >
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="7.32*" ></ColumnDefinition>
			<ColumnDefinition  Width="71*" ></ColumnDefinition>
			<ColumnDefinition Width="0.366*" ></ColumnDefinition>
			<ColumnDefinition Width="8.8*" ></ColumnDefinition>
			<ColumnDefinition Width="12.45*" ></ColumnDefinition>
		</Grid.ColumnDefinitions>

		<Label Content="Источник:" Grid.Column="0"  Padding="10"></Label>
		<TextBox  Name="personsSourceFile"  Text="{ Binding   Path = sourceFilePath,   Mode=OneWayToSource }"
				  Grid.Column="1"  Height="20"  FontSize="14"/>
		<Button Name="chooseFile"  Tapped="ChooseFile"  Content="Выбрать файл"  Grid.Column="3" ></Button>
		<Button  Name="editSourceFile"   Tapped="OpenLikeExcel"
				 Content="Редактировать файл" Grid.Column="4" ></Button>
	</Grid>
	
</UserControl>
